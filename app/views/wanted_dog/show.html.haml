= form_for :dog do |f|
  .row-fluid
  .offset2.span7
    %div.well
      %p
        %b #{t('dog.name')}:
        = @dog.name
      %p
        %b #{t('dog.age')}:
        = @dog.age
      %p
        %b #{t('dog.breed')}:
        = @dog.breed.label
      %p
        %b #{t('dog.color')}:
        = @dog.color
      %p
        %b #{t('dog.description')}:
        = @dog.description
      %p
        = image_tag @dog.image.url

      = link_to "Inicio", root_path, class: "btn btn-primary", style: "color: white;"
      = link_to "¡La encontrámos!", new_found_dog_path + '?wanted_dog_id=' + @dog.id.to_s, class: "btn btn-primary", style: "color: white;"