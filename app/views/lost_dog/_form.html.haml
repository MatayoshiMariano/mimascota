= form_for :lostdog do |f|
  .row-fluid
  .offset2.span7
    - if @lostdog.errors.any?
      #error_explanation
        %h2= "Por favor! Corrige los errores para poder realizar tu publicaci√≥n."
        %ul
          - @lostdog.errors.full_messages.each do |msg|
            %li= msg    
    %div.well
      %div
        = f.label :breed, "#{t('dog.breed')}"
        = f.text_field :breed, class: "textField"
      %div
        = f.label :color, "#{t('dog.color')}"
        = f.text_field :color, class: "textField"
      %div
        = f.label :description, "#{t('dog.description')}"
        = f.text_area :description, class: "textareaForm"
      %div
        = f.label :image, "#{t('dog.image')}"
        = f.file_field :image
      %div
        = label_tag "Direccion"
        = text_field_tag "address", ""
        
      %div.inline
      = f.submit "#{t('guardar')}" ,  class: "btn btn-primary"
      = link_to "Cancelar", root_path, class: "btn btn-warning", style: "color: white;"