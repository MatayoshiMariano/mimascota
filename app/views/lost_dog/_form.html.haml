= form_for :lostdog do |f|
  - if !@dog.errors.empty?
    %div.alert.alert-error
      %button{type: "button", class: "close", :'data-dismiss' => "alert"}
        &times
      - @dog.errors.full_messages.each do |msg|
        %p= msg
  .row-fluid
    .offset2.span7      
      %div.well
        %div
          = f.label :breed, "#{t('dog.breed')}"
          = f.select :breed_id, Breed.all.collect {|b| [b.label, b.id]}.order('label'), required:true
        %div
          = f.label :color, "#{t('dog.color')}"
          = f.text_field :color, class: "textField", required: true
        %div
          = f.label :description, "#{t('dog.description')}"
          = f.text_area :description, class: "textareaForm", required: true
        %div
          = f.label :image, "#{t('dog.image')}"
          = f.file_field :image, required: true
        %div
          = label_tag "Direccion"
          = text_field_tag "address", "", required: true
        %div= f.submit "#{t('guardar')}" ,  class: "btn btn-primary"
