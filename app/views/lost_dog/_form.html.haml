= form_for :lostdog do |f|
  .row-fluid
  .span4
    %div.well
      %div
        = f.label :name, "#{t('dog.name')}"
        = f.text_field :name, :autofocus => true  
      %div
        = f.label :age, "#{t('dog.age')}"
        = f.text_field :age
      %div
        = f.label :breed, "#{t('dog.breed')}"
        = f.text_field :breed
      %div
        = f.label :color, "#{t('dog.color')}"
        = f.text_field :color
      %div
        = f.label :description, "#{t('dog.description')}"
        = f.text_field :description
      %div= f.submit "#{t('guardar')}" ,  class: "btn btn-primary"