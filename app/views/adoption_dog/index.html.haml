%h1 #{t('dog.adopt_dogs')}

.row-fluid
  .span10
    -@dogs.each do |dog|  
      .media
        .pull-left
          .media-object
            %img{src: dog.image.url }
        .media-body
          %h4= dog.name
          %p
            %b #{t('dog.age')}:
            = dog.age
          %p
            %b #{t('dog.breed')}:
            = dog.breed.label
          %p
            %b #{t('dog.color')}:
            = dog.color
          %p
            %b #{t('dog.description')}:
            = dog.description

  .span2
    = link_to "#{t('welcome.new_adoption_dog_button')}", new_adoption_dog_path, class: "btn btn-primary btn-block lost-dogs", style: "color: white;"
