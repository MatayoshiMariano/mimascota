.offset3.span4
  %div.well
    %p
      %b #{t('dog.name')}:
      = @dog.name
    %p
      %b #{t('dog.age')}:
      = @dog.age
    %p
      %b #{t('dog.breed')}:
      = @dog.breed.label
    %p
      %b #{t('dog.color')}:
      = @dog.color
    %p
      %b #{t('dog.description')}:
      = @dog.description
