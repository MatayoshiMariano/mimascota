%h3 Registro
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  - if !resource.errors.empty?
    %div.alert.alert-error
      %button{type: "button", class: "close", :'data-dismiss' => "alert"}
        &times
      - resource.errors.full_messages.each do |msg|
        %p= msg

  .row-fluid
    %p #{t('users.sign_up.also_fb')}
    .row-fluid.sign-up-inputs
      .offset4.span4.facebook-div
        - User.omniauth_providers.each do |provider|
          = link_to image_tag('facebook_connect.png'), omniauth_authorize_path(:user, provider), class: 'fb-connect'  
  .row-fluid.sign-up-inputs
    .offset4.span4
      = f.label :first_name, "#{t('user.first_name')}"
      = f.text_field :first_name, :autofocus => true  
  .row-fluid.sign-up-inputs
    .offset4.span4        
      = f.label :last_name, "#{t('user.last_name')}"
      = f.text_field :last_name, :autofocus => true        
  .row-fluid.sign-up-inputs
    .offset4.span4        
      = f.label :birthday, "#{t('user.birthday')}"
      = f.date_field :birthday, :autofocus => true
  .row-fluid.sign-up-inputs
    .offset4.span4        
      = f.label :phone, "#{t('user.phone')}"
      = f.telephone_field :phone, :autofocus => true                    
  .row-fluid.sign-up-inputs
    .offset4.span4
      = f.label :cellphone, "#{t('user.cellphone')}"
      = f.telephone_field :cellphone, :autofocus => true
  .row-fluid.sign-up-inputs
    .offset4.span4        
      = f.label :email, "#{t('user.email')}"
      = f.email_field :email, :autofocus => true
  .row-fluid.sign-up-inputs
    .offset4.span4        
      = f.label :password, "#{t('user.password')}"
      = f.password_field :password
  .row-fluid.sign-up-inputs
    .offset4.span4        
      = f.label :password_confirmation, "#{t('user.password_confirmation')}"
      = f.password_field :password_confirmation
  .row-fluid.sign-up-inputs
    .offset4.span4
      = f.submit "#{t('user.sign_up_submit')}" ,  class: "btn btn-primary"
