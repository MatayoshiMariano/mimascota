= form_for @noticium do |f|
  - if @noticium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@noticium.errors.count, "error")} prohibited this noticium from being saved:"
      %ul
        - @noticium.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :"#{t('titulo')}"
    = f.text_field :title
  .field
    = f.label :"#{t('contenido')}"
    = f.text_area :content
  .actions
    = f.submit "#{t('guardar')}"
